{
  "configurations": [
    {
      "name": "Infobip Messages API",
      "mcp_json": {
        "mcpServers": {
          "ib-messages-api": {
            "command": "npx",
            "args": [
              "mcp-remote",
              "https://mcp.infobip.com/messages-api",
              "--header",
              "Authorization: App ${INFOBIP_API_KEY}"
            ],
            "env": {
              "INFOBIP_API_KEY": "<Your Infobip API Key here>"
            }
          }
        }
      }
    },
    {
      "name": "PayPal Sandbox",
      "mcp_json": {
        "mcpServers": {
          "paypal": {
            "command": "npx",
            "args": [
              "mcp-remote",
              "https://mcp.sandbox.paypal.com/sse",
              "--header",
              "Authorization: Bearer ${PAYPAL_API_KEY}"
            ],
            "env": {
              "PAYPAL_API_KEY": "<Your PayPal API Key here>"
            }
          }
        }
      }
    },
